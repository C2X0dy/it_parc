<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Contract List View -->
    <record id="view_it_contract_list" model="ir.ui.view">
        <field name="name">it.contract.list</field>
        <field name="model">it.contract</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="billing_frequency"/>
                <field name="amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Contract Form View - mise à jour pour Odoo 18.0 -->
    <record id="view_it_contract_form" model="ir.ui.view">
        <field name="name">it.contract.form</field>
        <field name="model">it.contract</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_invoice_now" string="Générer une facture" type="object" 
                            class="oe_highlight" invisible="state != 'active'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                            <field name="invoice_count" widget="statinfo" string="Factures"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Référence du contrat"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="expiry_alert" invisible="1"/>
                        </group>
                        <group>
                            <field name="product_id" domain="[('type', '=', 'service')]"/>
                            <field name="amount" invisible="price_per_asset > 0"/>
                            <field name="price_per_asset"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Description du contrat..."/>
                        </page>
                        
                        <page string="Équipements couverts" name="assets">
                            <field name="asset_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="asset_type"/>
                                    <field name="serial_number"/>
                                    <field name="warranty_end"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Facturation" name="billing">
                            <group>
                                <group string="Configuration de facturation">
                                    <field name="billing_frequency"/>
                                    <field name="next_invoice_date"/>
                                    <field name="auto_invoice_send"/>
                                </group>
                                <group string="Conditions financières">
                                    <field name="discount_rate" widget="percentage"/>
                                    <field name="discount_amount"/>
                                    <field name="has_special_conditions"/>
                                    <field name="special_conditions" invisible="not has_special_conditions"/>
                                    <field name="include_out_of_scope"/>
                                </group>
                            </group>
                            
                            <group string="Services supplémentaires">
                                <field name="extra_service_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                    </list>
                                </field>
                            </group>
                            
                            <field name="out_of_scope_count" invisible="1"/>
                            <div invisible="not include_out_of_scope">
                                <button name="action_view_billable_interventions" type="object" 
                                        class="btn-primary" icon="fa-list">
                                    <span>Interventions à facturer</span>
                                    <span class="badge badge-warning ml-2" invisible="out_of_scope_count == 0">
                                        <field name="out_of_scope_count"/>
                                    </span>
                                </button>
                                <field name="out_of_scope_intervention_ids" widget="many2many" 
                                       invisible="out_of_scope_count == 0">
                                    <list>
                                        <field name="name"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                        <field name="duration" widget="float_time"/>
                                        <field name="hourly_rate"/>
                                    </list>
                                </field>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Contract Action -->
    <record id="action_it_contract" model="ir.actions.act_window">
        <field name="name">Maintenance Contracts</field>
        <field name="res_model">it.contract</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_it_contract_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first maintenance contract!
            </p>
        </field>
    </record>
</odoo>