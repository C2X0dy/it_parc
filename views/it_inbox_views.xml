<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue de type conversation pour l'inbox -->
    <record id="view_it_inbox_list" model="ir.ui.view">
        <field name="name">it.inbox.list</field>
        <field name="model">it.ticket</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <list string="Messages" default_order="date_created desc">
                <field name="channel_id" widget="badge"/>
                <field name="date_created" string="Date"/>
                <field name="partner_id" string="De"/>
                <field name="name" string="Sujet"/>
                <field name="description" string="Message" widget="text_preview" options="{'preview_length': 100}"/>
                <field name="state" decoration-info="state == 'new'" 
                       decoration-primary="state == 'in_progress'"
                       decoration-success="state == 'resolved'"
                       decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>
    
    <!-- Vue formulaire pour afficher la conversation -->
    <record id="view_it_inbox_form" model="ir.ui.view">
        <field name="name">it.inbox.form</field>
        <field name="model">it.ticket</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Discussion">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="0"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" readonly="0"/>
                            <field name="email_from" readonly="0"/>
                        </group>
                        <group>
                            <field name="channel_id" readonly="0"/>
                            <field name="date_created" readonly="1"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Message du client..." widget="html"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}" 
                           widget="mail_thread" placeholder="Écrire une réponse..."/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Action pour la boîte de réception -->
    <record id="action_it_inbox" model="ir.actions.act_window">
        <field name="name">Boîte de réception</field>
        <field name="res_model">it.ticket</field>
        <field name="view_mode">list,form</field>
        <!-- Utiliser explicitement la vue liste en premier -->
        <field name="view_id" ref="view_it_inbox_list"/>
        <!-- Désactiver la création et permettre l'édition pour répondre -->
        <field name="context">{
            'search_default_unread': 1,
            'default_type': 'communication',
            'create': False,
            'edit': True
        }</field>
        <field name="domain">[('channel_id', '!=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Boîte de réception vide!
            </p>
            <p>
                Tous les messages et tickets de vos clients apparaîtront ici automatiquement.
            </p>
        </field>
    </record>
    
    <!-- Vue recherche pour filtrer facilement -->
    <record id="view_it_inbox_search" model="ir.ui.view">
        <field name="name">it.inbox.search</field>
        <field name="model">it.ticket</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="description"/>
                <field name="email_from"/>
                <filter string="Non lus" name="unread" domain="[('state','=','new')]"/>
                <filter string="En traitement" name="in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Résolus" name="resolved" domain="[('state','=','resolved')]"/>
                <filter string="Emails" name="email_channel" domain="[('channel_id.code','=','email')]"/>
                <filter string="Portail" name="portal_channel" domain="[('channel_id.code','=','portal')]"/>
                <group expand="0" string="Regrouper par">
                    <filter name="group_by_channel" string="Canal" context="{'group_by': 'channel_id'}"/>
                    <filter name="group_by_partner" string="Client" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_state" string="État" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Menu Item -->
    <menuitem id="menu_it_inbox" 
              name="Boîte de réception"
              parent="menu_it_parc_root" 
              action="action_it_inbox" 
              sequence="10"/>
</odoo>