<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ticket List View -->
    <record id="view_it_ticket_tree" model="ir.ui.view">
        <field name="name">it.ticket.list</field>
        <field name="model">it.ticket</field>
        <field name="arch" type="xml">
            <list decoration-danger="priority == '3'" decoration-warning="priority == '2'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="asset_id"/>
                <field name="priority"/>
                <field name="user_id"/>
                <field name="date_created"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Ticket Form View -->
    <record id="view_it_ticket_form" model="ir.ui.view">
        <field name="name">it.ticket.form</field>
        <field name="model">it.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Subject..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="asset_id" domain="[('partner_id', '=', partner_id)]"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="date_created"/>
                            <field name="date_resolved" invisible_if="state != 'resolved'"/>
                            <field name="time_spent"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Describe the issue..."/>
                        </page>
                        <page string="Resolution" invisible_if="state not in ['resolved']">
                            <field name="resolution_details" placeholder="How was this issue resolved?"/>
                        </page>
                    </notebook>
                    <!-- Dans la vue formulaire des tickets -->
                    <field name="channel_id"/>
                    <field name="email_from"/>
                    <field name="email_cc"/>
                    <button name="action_create_invoice" string="Facturer" type="object" 
                            invisible_if="is_billed or not partner_id" class="oe_highlight"/>
                    <field name="is_billed" invisible="1"/>
                    <field name="invoice_id" readonly="1" invisible_if="not is_billed"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Ticket Action -->
    <record id="action_it_ticket" model="ir.actions.act_window">
        <field name="name">Support Tickets</field>
        <field name="res_model">it.ticket</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first support ticket!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_it_ticket" 
              name="Support Tickets"
              parent="menu_it_parc_root" 
              action="action_it_ticket" 
              sequence="40"/>
</odoo>