    <!-- Vue calendrier pour les échéances -->
    <record id="view_it_customer_calendar" model="ir.ui.view">
        <field name="name">it.customer.calendar</field>
        <field name="model">it.contract</field>
        <field name="arch" type="xml">
            <calendar string="Échéances contrats" date_start="end_date" color="partner_id" mode="month">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="amount"/>
            </calendar>
        </field>
    </record>

    <!-- Vue d'opportunité formulaire -->
    <record id="view_it_customer_opportunity_form" model="ir.ui.view">
        <field name="name">it.customer.opportunity.form</field>
        <field name="model">it.customer.opportunity</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_qualify" string="Qualifier" type="object" 
                            invisible_if="state != 'draft'" class="oe_highlight"/>
                    <button name="action_create_proposal" string="Créer proposition" type="object" 
                            invisible_if="state != 'qualified'" class="oe_highlight"/>
                    <button name="action_mark_won" string="Marquer comme gagnée" type="object" 
                            invisible_if="state != 'proposal'" class="oe_highlight"/>
                    <button name="action_mark_lost" string="Marquer comme perdue" type="object" 
                            invisible_if="state not in ('draft', 'qualified', 'proposal')" class="btn-danger"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,qualified,proposal,won,lost"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Titre de l'opportunité"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="type"/>
                            <field name="detection_date"/>
                            <field name="expected_closing"/>
                        </group>
                        <group>
                            <field name="estimated_revenue"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="probability" widget="percentage"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Détails de l'opportunité détectée..." nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue d'opportunité liste -->
    <record id="view_it_customer_opportunity_list" model="ir.ui.view">
        <field name="name">it.customer.opportunity.list</field>
        <field name="model">it.customer.opportunity</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'won'" decoration-danger="state == 'lost'" decoration-warning="state == 'proposal'" decoration-info="state == 'qualified'">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="type"/>
                <field name="estimated_revenue" sum="Total"/>
                <field name="probability" widget="percentage"/>
                <field name="detection_date"/>
                <field name="expected_closing"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Vue de recherche d'opportunité -->
    <record id="view_it_customer_opportunity_search" model="ir.ui.view">
        <field name="name">it.customer.opportunity.search</field>
        <field name="model">it.customer.opportunity</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="type"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Qualifiée" name="qualified" domain="[('state', '=', 'qualified')]"/>
                <filter string="Proposition" name="proposal" domain="[('state', '=', 'proposal')]"/>
                <filter string="Gagnée" name="won" domain="[('state', '=', 'won')]"/>
                <filter string="Perdue" name="lost" domain="[('state', '=', 'lost')]"/>
                <separator/>
                <filter string="Forte probabilité" name="high_probability" domain="[('probability', '>=', 70)]"/>
                <filter string="CA élevé" name="high_revenue" domain="[('estimated_revenue', '>=', 10000)]"/>
                <group expand="0" string="Group By">
                    <filter string="Client" name="group_by_customer" context="{'group_by': 'customer_id'}"/>
                    <filter string="Type" name="group_by_type" context="{'group_by': 'type'}"/>
                    <filter string="État" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_it_customer" model="ir.actions.act_window">
        <field name="name">Clients IT</field>
        <field name="res_model">it.customer</field>
        <!-- Assurez-vous que "dashboard" n'est pas inclus dans view_mode -->
        <field name="view_mode">kanban,list,form,pivot</field>
    </record>

    <record id="action_it_customer_opportunity" model="ir.actions.act_window">
        <field name="name">Opportunités</field>
        <field name="res_model">it.customer.opportunity</field>
        <field name="view_mode">list,form</field>
        <!-- Utiliser "list" au lieu de "tree" -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première opportunité !
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_it_customer" 
              name="Clients IT"
              parent="menu_it_parc_root" 
              action="action_it_customer" 
              sequence="15"/>

    <menuitem id="menu_it_customer_opportunity" 
              name="Opportunités"
              parent="menu_it_parc_root" 
              action="action_it_customer_opportunity" 
              sequence="16"/>
</odoo>
