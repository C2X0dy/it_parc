<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire pour les licences -->
    <record id="view_it_license_form" model="ir.ui.view">
        <field name="name">it.license.form</field>
        <field name="model">it.license</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate" string="Activer" type="object" 
                            class="oe_highlight" invisible_if="state != 'draft'"/>
                    <button name="action_expire" string="Marquer comme expirée" type="object" 
                            invisible_if="state not in ['active', 'draft']"/>
                    <button name="action_terminate" string="Résilier" type="object" 
                            invisible_if="state not in ['active', 'draft']"/>
                    <button name="action_reset_to_draft" string="Réinitialiser" type="object" 
                            invisible_if="state == 'draft'"/>
                    <button name="action_create_renewal_quote" string="Créer devis de renouvellement" 
                            type="object" class="btn-primary" 
                            invisible_if="renewal_quote_id or state not in ['active', 'expired']"/>
                    <button name="action_audit_license" string="Audit de licence" 
                            type="object" icon="fa-check-square-o"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,expired,terminated"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_quotations" type="object" 
                                class="oe_stat_button" icon="fa-file-text-o"
                                invisible_if="not vendor_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Devis</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Nom de la licence"/></h1>
                    </div>
                    
                    <!-- Suite du formulaire identique -->
                    <group>
                        <group>
                            <field name="software_id"/>
                            <field name="license_key"/>
                            <field name="license_type"/>
                            <field name="is_concurrent"/>
                            <field name="activation_date"/>
                            <field name="expiration_date"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="purchased_seats"/>
                            <field name="used_seats"/>
                            <field name="available_seats"/>
                            <field name="compliance_status" decoration-danger="compliance_status in ('over_used', 'expired')" 
                                   decoration-warning="compliance_status == 'under_used'" 
                                   decoration-success="compliance_status == 'compliant'"/>
                            <field name="last_audit_date"/>
                        </group>
                    </group>
                    <group string="Informations financières et contractuelles">
                        <group>
                            <field name="purchase_date"/>
                            <field name="purchase_value"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="vendor_id"/>
                        </group>
                        <group>
                            <field name="renewal_cost"/>
                            <field name="renewal_term"/>
                            <field name="renewal_planned"/>
                            <field name="renewal_quote_id" readonly="1" invisible_if="not renewal_quote_id"/>
                            <field name="contract_reference"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Équipements associés" name="assets">
                            <field name="asset_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="asset_type"/>
                                    <field name="serial_number"/>
                                    <field name="partner_id"/>
                                    <field name="user_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Utilisateurs" name="users">
                            <field name="user_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="login"/>
                                    <field name="email"/>
                                </list>
                            </field>
                        </page>
                        <page string="Documents" name="documents">
                            <group>
                                <field name="agreement_document" widget="binary" filename="agreement_filename"/>
                                <field name="agreement_filename" invisible="1"/>
                            </group>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Entrez ici les informations supplémentaires..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue liste pour les licences -->
    <record id="view_it_license_tree" model="ir.ui.view">
        <field name="name">it.license.tree</field>
        <field name="model">it.license</field>
        <field name="arch" type="xml">
            <list decoration-danger="compliance_status in ('over_used', 'expired')" 
                  decoration-warning="compliance_status == 'under_used'" 
                  decoration-success="compliance_status == 'compliant'">
                <field name="name"/>
                <field name="software_id"/>
                <field name="license_type"/>
                <field name="purchased_seats"/>
                <field name="used_seats"/>
                <field name="available_seats"/>
                <field name="expiration_date"/>
                <field name="compliance_status"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Vue recherche pour les licences -->
    <record id="view_it_license_search" model="ir.ui.view">
        <field name="name">it.license.search</field>
        <field name="model">it.license</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="software_id"/>
                <field name="license_key"/>
                <field name="vendor_id"/>
                <separator/>
                <filter string="Actives" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Expirées" name="expired" domain="[('state', '=', 'expired')]"/>
                <filter string="Résiliées" name="terminated" domain="[('state', '=', 'terminated')]"/>
                <separator/>
                <filter string="Expirent bientôt" name="expiring_soon" 
                        domain="[('expiration_date', '&lt;=', (context_today() + datetime.timedelta(days=30)).strftime('%Y-%m-%d')), 
                                 ('expiration_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Sur-utilisées" name="over_used" domain="[('compliance_status', '=', 'over_used')]"/>
                <filter string="Sous-utilisées" name="under_used" domain="[('compliance_status', '=', 'under_used')]"/>
                <filter string="Conformes" name="compliant" domain="[('compliance_status', '=', 'compliant')]"/>
                <group expand="0" string="Group By">
                    <filter string="Logiciel" name="group_by_software" domain="[]" context="{'group_by': 'software_id'}"/>
                    <filter string="Type" name="group_by_type" domain="[]" context="{'group_by': 'license_type'}"/>
                    <filter string="État" name="group_by_state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Fournisseur" name="group_by_vendor" domain="[]" context="{'group_by': 'vendor_id'}"/>
                    <filter string="Conformité" name="group_by_compliance" domain="[]" context="{'group_by': 'compliance_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue kanban pour les licences -->
    <record id="view_it_license_kanban" model="ir.ui.view">
        <field name="name">it.license.kanban</field>
        <field name="model">it.license</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" example="license">
                <field name="name"/>
                <field name="software_id"/>
                <field name="license_type"/>
                <field name="expiration_date"/>
                <field name="purchased_seats"/>
                <field name="used_seats"/>
                <field name="compliance_status"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click 
                            #{record.compliance_status.raw_value == 'over_used' or record.compliance_status.raw_value == 'expired' ? 'oe_kanban_color_2' : 
                              record.compliance_status.raw_value == 'under_used' ? 'oe_kanban_color_3' : 
                              record.compliance_status.raw_value == 'compliant' ? 'oe_kanban_color_10' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div>
                                    <field name="software_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <t t-if="record.expiration_date.raw_value">
                                            <span title="Expiration">
                                                <i class="fa fa-clock-o"/> <field name="expiration_date"/>
                                            </span>
                                        </t>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span title="Licences" class="badge badge-pill">
                                            <field name="used_seats"/> / <field name="purchased_seats"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue graphique pour les licences -->
    <record id="view_it_license_graph" model="ir.ui.view">
        <field name="name">it.license.graph</field>
        <field name="model">it.license</field>
        <field name="arch" type="xml">
            <graph sample="1">
                <field name="software_id"/>
                <field name="purchased_seats" type="measure"/>
                <field name="used_seats" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vue pivot pour les licences -->
    <record id="view_it_license_pivot" model="ir.ui.view">
        <field name="name">it.license.pivot</field>
        <field name="model">it.license</field>
        <field name="arch" type="xml">
            <pivot sample="1">
                <field name="software_id" type="row"/>
                <field name="state" type="row"/>
                <field name="purchased_seats" type="measure"/>
                <field name="used_seats" type="measure"/>
                <field name="purchase_value" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action pour afficher les licences -->
    <record id="action_it_license" model="ir.actions.act_window">
        <field name="name">Licences</field>
        <field name="res_model">it.license</field>
        <field name="view_mode">tree,kanban,form,graph,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première licence
            </p>
            <p>
                Suivez vos licences logicielles, gérez les utilisateurs et équipements associés,
                et assurez-vous de rester conforme à vos contrats de licence.
            </p>
        </field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_it_license"
              name="Licences"
              parent="menu_it_asset"
              action="action_it_license"
              sequence="30"/>

    <menuitem id="menu_it_license_report"
              name="Analyse des licences"
              parent="menu_it_asset_reporting"
              action="action_it_license"
              sequence="30"/>
</odoo>