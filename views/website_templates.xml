<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template de liste des assets -->
    <template id="assets_list_template" name="IT Assets">
        <t t-call="website.layout">
            <div class="container">
                <h1 class="text-center">IT Assets</h1>
                
                <div class="row mt-4">
                    <div class="col-lg-12">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Type</th>
                                    <th>Numéro de série</th>
                                    <th>Utilisateur assigné</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="assets" t-as="asset">
                                    <tr>
                                        <td>
                                            <a t-att-href="'/it-assets/%s' % asset.id">
                                                <t t-esc="asset.name"/>
                                            </a>
                                        </td>
                                        <td><t t-esc="asset.asset_type"/></td>
                                        <td><t t-esc="asset.serial_number"/></td>
                                        <td><t t-esc="asset.user_id.name"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div class="text-center">
                            <t t-call="website.pager"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Template de détail d'un asset -->
    <template id="asset_detail_template" name="IT Asset Detail">
        <t t-call="website.layout">
            <div class="container">
                <div class="row mt-4">
                    <div class="col-lg-12">
                        <h1><t t-esc="asset.name"/></h1>
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Type:</strong> <t t-esc="asset.asset_type"/></p>
                                        <p><strong>Numéro de série:</strong> <t t-esc="asset.serial_number"/></p>
                                        <p><strong>Client:</strong> <t t-esc="asset.partner_id.name or ''" /></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Utilisateur assigné:</strong> <t t-esc="asset.user_id.name or ''" /></p>
                                        <p><strong>Date d'achat:</strong> <t t-esc="asset.purchase_date or ''" /></p>
                                        <p><strong>Fin de garantie:</strong> <t t-esc="asset.warranty_end or ''" /></p>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <h4>Notes</h4>
                                        <p t-esc="asset.notes or 'Aucune note disponible'"/>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <a href="/it-assets" class="btn btn-secondary">Retour à la liste</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>