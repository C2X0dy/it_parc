<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tâches existantes -->
        
        <!-- Tâche planifiée pour la facturation automatique -->
        <record id="ir_cron_contract_invoice_generation" model="ir.cron">
            <field name="name">IT Parc: Génération automatique des factures</field>
            <field name="model_id" ref="model_it_contract"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_invoices()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=2, minute=0, second=0)"/>
        </record>

        <!-- Vérification de la conformité des licences -->
        <record id="ir_cron_license_compliance_check" model="ir.cron">
            <field name="name">Vérification de la conformité des licences</field>
            <field name="model_id" ref="model_it_alert"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_license_compliance_alerts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
